class Person {
    var declare_name;
    var p_name = "per_name";
    fun init(this, name, age) {
        this.name = name;
        this.age = age;
    }
    fun set_age(this, age) {
        this.age = age;
    }
    fun set_name(this, name) {
        this.name = name;
    }
    fun print_info(this) {
        print this.p_name;
        this.declare_name = "test";     // define
        print this.declare_name;        // used 

        var start_time = clock();
        var sum = 0;
        for(var i = 0; i < 10000; i = i + 1) {
            sum = i > 5000 ? sum - 1 : sum + 1;
        }
        var end_time = clock();
        print "time elapsed: ";
        print end_time - start_time;
    }

    fun cls_method(cls) {
        print "This is a class method";
        print cls;                  // print the class itself
    }
    fun static_method() {
        print "This is a static method";
    }
}

var p1 = Person("Jane", 30);
print p1;
p1.set_age(10000);
p1.set_name("alex");
print p1;

var p2 = Person("Tom", 25);
print p2;
p2.set_age(20000);
p2.set_name("jack");
print p2;

print p1.print_info();
print p2.p_name;

